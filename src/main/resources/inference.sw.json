{
  "id": "inference",
  "version": "1.0",
  "specVersion": "0.8",
  "name": "Inference Pipeline",
  "description": "Inference Pipeline with SonataFlow",
  "start": "Imports",
  "functions": [
    {
      "name": "python",
      "type": "custom",
      "operation": "script:python"
    },
    {
      "name": "infer",
      "operation": "model_openapi.yaml#infer"
    }
  ],
  "states": [
    {
      "name": "Imports",
      "type": "operation",
      "actions": [
        {
          "functionRef": {
            "refName": "python",
            "arguments": {
              "script": "import sys\nsys.path.append('./python')\nfrom coco_to_kserve import to_kserve\nfrom response_handler import handle_response"
            }
          }
        }
      ],
      "transition": "Inference pre-processing"
    },
    {
      "name": "Inference pre-processing",
      "type": "operation",
      "actions": [
        {
          "subFlowRef": "pre_processing"
        }
      ],
      "transition": "Infer"
    },
    {
      "name": "Infer",
      "type": "operation",
      "actions": [
        {
          "functionRef": {
            "refName": "infer",
            "arguments": {
              "inputs": ".kserve_payload.inputs"
            }
          }
        }
      ],
      "stateDataFilter": {
        "output": "{kserve_response: .outputs, image: .image}"
      },
      "transition": "Inference post-processing"
    },
    {
      "name": "Inference post-processing",
      "type": "operation",
      "actions": [
        {
          "subFlowRef": "post_processing"
        }
      ],
      "stateDataFilter": {
        "output": "{output_image: .output_image}"
      },
      "end": true
    }
  ]
}